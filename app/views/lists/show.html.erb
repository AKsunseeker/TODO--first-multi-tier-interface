<h1>Editing List with Name: <%= @list.name %></h1>
<br />
<% if @items.any? %>
  <ol>
  <% @items.each do |item| %>
    <li><%= link_to item.name, item_path(item)  %>
    <%= button_to 'Edit List', edit_list_path(item), method: :get %>
        <%= button_to "Delete List", list_path(item), method: :delete, data: {confirm: 'Really delete this item?'} %></li>
  <% end %>
</ol>
<% else %>
  <h3>No items in the list, please create one</h3>  
<% end %>

<%= link_to 'Create Item', new_item_path(list_id: @list.id) %>

